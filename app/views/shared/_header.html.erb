<header>
  <div class="container">
    <div class="row">
      <div class="col-md-3 col-sm-3 col-xs-3">
        <div id="logo">
          <%= link_to "/" do %>
            <%= image_tag("logo.png", size: "160x34", alt: "Thai meditation", class: "logo_normal break-max-width", "data-retina": "true") %>
          <% end %>
          <%= link_to "/" do %>
            <%= image_tag("logo.png", size: "160x34", alt: "Thai meditation", class: "logo_sticky break-max-width", "data-retina": "true") %>
          <% end %>
        </div>
      </div>
      <nav class="col-md-9 col-sm-9 col-xs-9">
        <a class="cmn-toggle-switch cmn-toggle-switch__htx open_close" href="javascript:void(0);">
          <span>Menu mobile</span>
        </a>
        <div class="main-menu">
          <div id="header_menu">
            <img src="/assets/logo.png" width="160" height="34" alt="City tours" data-retina="true">
          </div>
          <a href="#" class="open_close" id="close_in">
            <i class="icon_set_1_icon-77"></i>
          </a>
          <ul>
            <li class="submenu">
              <%= link_to "Home", "/",class: "show-submenu"  %>
            </li>
            <li class="submenu">
              <% if current_page?("/") %>
                <%= link_to "What we do?", "#aboutus",class: "show-submenu slide-menu"  %>
              <% else %>
                <%= link_to "What we do?", "/#aboutus",class: "show-submenu"  %>
              <% end %>
            </li>
            <li class="submenu">
              <%= link_to "Meditation Activities", activities_path %>
            </li>
            <!--<li class="submenu">-->
              <!--<a href="#" class="show-submenu">Sign Up</a>-->
            <!--</li>-->
            <% if logged_in? %>
                <li class="submenu">
                  <%= link_to "Profile", user_profile_path %>
                </li>
                <li class="submenu">
                  <%= link_to "| Log out", logout_path , method: :delete %>
                </li>
            <% else %>
              <li class="submenu">
                <div class="dropdown dropdown-access" id="sign-up-nav-box-header">
                  <a href="#" class="sign-in-link" id="sign-in-nav-bt">| Sign in</a>

                    <div class="dropdown-menu">

                      <%= form_for(:session, url: login_path) do |f| %>
                          <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                              <!--<a href="#" class="bt_facebook">-->
                                <!--<i class="icon-facebook"></i>Facebook-->
                              <!--</a>-->
                              <%= link_to "/auth/facebook", class: "bt_facebook" do %>
                                  <i class="icon-facebook"></i>
                                  Login with Facebook
                              <% end %>
                            </div>
                            <!--<div class="col-md-6 col-sm-6 col-xs-6">-->
                              <!--<a href="#" class="bt_paypal">-->
                                <!--<i class="icon-paypal"></i>Paypal </a>-->
                            <!--</div>-->
                          </div>

                          <div class="login-or">
                            <hr class="hr-or">
                            <span class="span-or">or</span>
                          </div>
                          <div class="form-group">
                            <%= f.text_field :email, class: 'form-control', :placeholder => "Email" %>
                          </div>
                          <div class="form-group">
                            <%= f.password_field :password, class: 'form-control', :placeholder => "Password" %>
                          </div>
                          <%= link_to "Forgot password?", new_password_reset_path %>

                          <%= f.submit "Log in", class: "button_drop" %>
                          <%= link_to 'SIGN UP', signup_path,class: "button_drop outline", id: "sign-up-bt-nav" %>

                      <% end %>

                    </div>

                </div><!-- End Dropdown access -->
              </li>
            <% end %>
          </ul>
        </div>
      </nav>

    </div>
  </div>


</header>