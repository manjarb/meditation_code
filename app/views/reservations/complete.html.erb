<div id="position">
  <div class="container">
    <ul>
      <li>
        <%= link_to "Activities", activities_path %>
      </li>
      <li>
        <%= link_to @activity.name, activity_show_path(@activity.id) %>
      </li>
      <li>Success Booking</li>
    </ul>
  </div>
</div><!-- Position -->

<div class="container margin_60">
  <div class="row">
    <div class="col-md-8 add_bottom_15">
      <div class="form_title">
        <h3><strong><i class="icon-tag-1"></i></strong>Booking summary</h3>
        <p>
          Mussum ipsum cacilds, vidis litro abertis.
        </p>
      </div>
      <div class="step">
        <table class="table confirm">
          <tbody>
            <tr>
              <td>
                <strong>Name</strong>
              </td>
              <td>
                <%= @reservation.firstname %> <%= @reservation.lastname %>
              </td>
            </tr>
            <tr>
              <td>
                <strong>email</strong>
              </td>
              <td>
                <%= @reservation.phone_number %>
              </td>
            </tr>
            <% if !@reservation.activity_start_date.nil? && @reservation.activity_start_date != "" %>
                <tr>
                  <td>
                    <strong>Start Date</strong>
                  </td>
                  <td>
                    <%= @reservation.activity_start_date.strftime("%d %B %Y") %>
                  </td>
                </tr>
                <tr>
                  <td>
                    <strong>End Date</strong>
                  </td>
                  <td>
                    <%= @reservation.activity_end_date.strftime("%d %B %Y") %>
                  </td>
                </tr>
            <% end %>
            <tr>
              <td>
                <strong>Phone number</strong>
              </td>
              <td>
                <%= @reservation.phone_number %>
              </td>
            </tr>
            <% unless @reservation.payment_amount.nil? %>
              <tr>
                <td>
                  <strong>TOTAL COST</strong>
                </td>
                <td>
                  <%= @reservation.payment_amount %> Baht
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
    <aside class="col-md-4">
      <div class="box_style_1">
        <h3 class="inner">Thank you!</h3>
