<section id="hero" class="login">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
        <div id="login">
          <div class="text-center">
            <%= image_tag("logo.png", alt: "Thai meditation sign up", "data-retina": "true") %>
          </div>
          <hr>

          <%= form_for(:session, url: login_path) do |f| %>
              <% flash.each do |message_type,message|%>
                  <div class="alert alert-<%= message_type %>"><%= message %></div>
              <% end %>
              <div class="row">
                <div class="col-md-12 col-sm-12 login_social">
                  <!--<a href="#" class="btn btn-primary btn-block"><i class="icon-facebook"></i> Facebook</a>-->
                  <%= link_to "/auth/facebook", class: "btn btn-primary btn-block" do %>
                      <i class="icon-facebook"></i>
                      Login with Facebook
                  <% end %>
                </div>
                <!--<div class="col-md-6 col-sm-6 login_social">-->
                  <!--<a href="#" class="btn btn-info btn-block "><i class="icon-twitter"></i>Twitter</a>-->
                <!--</div>-->
              </div> <!-- end row -->
              <div class="login-or"><hr class="hr-or"><span class="span-or">or</span></div>

              <div class="form-group">
                <%= f.text_field :email, class: 'form-control', :placeholder => "Email" %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, class: 'form-control', :placeholder => "Password" %>
              </div>

              <p class="">
                <%= link_to "Forgot password?", new_password_reset_path %>
              </p>
              <br>
              <%= f.submit "Log in", class: "btn_full" %>
              <%= link_to 'Register', signup_path, class: "btn_full_outline" %>

          <% end %>

        </div>

      </div>
    </div>
  </div>
</section>