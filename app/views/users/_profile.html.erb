<div class="row">
  <div class="col-md-6 col-sm-6">
    <h4>Your profile</h4>
    <ul id="profile_summary">
      <% unless @user.login_type == "facebook" %>
        <li>Username
          <span><%= @user.username %></span>
        </li>
        <li>Email
          <span><%= @user.email %></span>
        </li>
      <% end %>
      <li>Full Name
        <span><%= @user.name %></span>
      </li>
      <li>Phone number
        <span><%= @user.phone_number %></span>
      </li>
      <li>Date of birth
        <span><%= @user.birth_date %></span>
      </li>
      <li>Address
        <span><%= @user.address %></span>
      </li>
      <li>City
        <span><%= @user.city %></span>
      </li>
      <li>Zip code
        <span><%= @user.zip_code %></span>
      </li>
      <li>Country
        <span><%= @user.country %></span>
      </li>
    </ul>
  </div>
</div>

<div class="divider"></div>

<%= form_for(@user) do |f| %>
  <div class="row">
    <div class="col-md-12">
      <h4>Edit profile</h4>
      <br>
    </div>
    <% unless @user.login_type == "facebook" %>
      <div class="col-md-6 col-sm-6">
        <div class="form-group">
          <label>Username</label>
          <%= f.text_field :username, class: 'form-control', :placeholder => "Username" %>
        </div>
      </div>
    <% end %>
    <div class="col-md-6 col-sm-6">
      <div class="form-group">
        <label>Full name</label>
        <%= f.text_field :name, class: 'form-control', :placeholder => "Full name" %>
      </div>
    </div>
  </div><!-- End row -->

  <div class="row">
    <div class="col-md-6 col-sm-6">
      <div class="form-group">
        <label>Phone number</label>
        <%= f.text_field :phone_number, class: 'form-control', :placeholder => "Phone number" %>
      </div>
    </div>
    <div class="col-md-6 col-sm-6">
      <div class="form-group">
        <label>Date of birth <small>(dd/mm/yyyy)</small></label>
        <%= f.text_field :birth_date, class: 'form-control', :placeholder => "Date of birth" %>
      </div>
    </div>
  </div><!-- End row -->

  <hr>

  <div class="row">
    <div class="col-md-6 col-sm-6">
      <div class="form-group">
        <label>Address</label>
        <%= f.text_field :address, class: 'form-control', :placeholder => "Phone number" %>
      </div>
    </div>
    <div class="col-md-6 col-sm-6">
      <div class="form-group">
        <label>City</label>
        <%= f.text_field :city, class: 'form-control', :placeholder => "Date of birth" %>
      </div>
    </div>
  </div><!-- End row -->

  <div class="row">
    <div class="col-md-6 col-sm-6">
      <div class="form-group">
        <label>Zip code</label>
        <%= f.text_field :zip_code, class: 'form-control', :placeholder => "Phone number" %>
      </div>
    </div>
    <div class="col-md-6 col-sm-6">
      <div class="form-group">
        <label>Country</label>
        <%= f.select :country, all_countries_array_list,{},{ :class => 'form-control' } %>
      </div>
    </div>
  </div><!-- End row -->

  <hr>

  <%= f.submit :"Update Profile", class: 'btn_1 green' %>

<% end %>