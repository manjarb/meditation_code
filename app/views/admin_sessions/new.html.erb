<div class="login-box">
  <h1>ADMIN LOGIN</h1>
  <br>
  <%= form_for(:admin_sessions, url: admin_login_path) do |f| %>
      <div class="form-group">
        <%= f.label :email%>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= link_to "(forgot password)", new_admin_password_reset_path %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="checkbox">
        <%= f.label :admin_remember_me  do %>
            <%= f.check_box :admin_remember_me %>
            <span>Remember me</span>
        <% end %>
      </div>

      <%= f.submit "Log in", class: "btn btn-primary" %>
  <% end %>

</div>