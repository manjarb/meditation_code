<div class="activities-list-banner-container">
  <div class="jumbotron">
    <div class="container">
      <h1>Sitemap</h1>

    </div>
  </div>
</div>

<section class="meditaion-list-container light-grey-bg">
  <div class="container margin_60">
    <div class="row">
      <div class="col-lg-12 col-md-12">
        <div id="filters_col">
          <div class="filter-box">
            <h2>Index</h2>
            <hr>
            <ul>
              <li>
                <%= link_to "home page", "/" %>
              </li>
              <li>
                <%= link_to "Sign up", signup_path %>
              </li>
              <li>
                <%= link_to "Login", login_path %>
              </li>
            </ul>
            <hr>
            <h2>Cities</h2>
            <ul>
              <li><%= link_to "Classes list",activities_list_path %></li>
              <% @temple_counter_hash.each do |key,value| %>
                <li>
                  <%= link_to activities_like_search_path(key) do %>
                    <%= return_city_by_key(key) %> Meditation class
                  <% end %>

                </li>
              <% end %>
            </ul>
            <hr>
            <h2>Classes</h2>
            <hr>
            <ul>

              <% @activities.each do |activity| %>
                <li><%= link_to activity.name , activity_show_path(activity.id) %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>