<section id="hero" class="login">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
        <div id="login">
          <div class="text-center">
            <%= image_tag("logo.png", alt: "Thai meditation sign up", "data-retina": "true") %>
          </div>

          <hr>
          <h3 style="text-align: center;">Reset password</h3>
          <br>
          <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
              <%= render 'shared/error_messages' , object: f.object %>

              <%= hidden_field_tag :email, @user.email  %>

              <div class="form-group">
                <%= f.label :password %>
                <%= f.text_field :password, class: 'form-control', :placeholder => "Email" %>
              </div>

              <div class="form-group">
                <%= f.label :password_confirmation, "Confirmation" %>
                <%= f.text_field :password_confirmation, class: 'form-control', :placeholder => "Confirm Email" %>
              </div>

              <br>
              <%= f.submit "Update password", class: "btn_full" %>

          <% end %>

        </div>

      </div>
    </div>
  </div>
</section>